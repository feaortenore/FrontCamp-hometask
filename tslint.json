{
  "rulesDirectory": [
    "codelyzer"
  ],
  "rules": {
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never"
      }
    ],
    "semicolon": [true, "always"],
    "quotemark": [true, "single", "avoid-template"],
    "number-literal-format": true,
    "no-trailing-whitespace": true,
    "no-consecutive-blank-lines": true,
    "new-parens": true,
    "newline-before-return": true,
    "max-line-length": [true, {"limit": 80, "ignore-pattern": "// |^import"}],
    "eofline": true,
    "import-spacing": true,
    "indent": [true, "spaces", 4],
    "arrow-parens": [true, "ban-single-arg-parens"],
    "align": [true, "arguments", "elements", "members", "parameters", "statements"],
    "variable-name": [true, "ban-keywords", "check-format", "require-const-for-all-caps"],
    "space-within-parens": true,
    "space-before-function-paren": [true, "never"],
    "prefer-template": true,
    "prefer-method-signature": true,
    "ordered-imports": true,
    "one-variable-per-declaration": [true, "ignore-for-loop"],
    "one-line": [true, "check-catch", "check-finally", "check-else", "check-open-brace", "check-whitespace"],
    "object-literal-shorthand": true,
    "object-literal-key-quotes": [true, "as-needed"],
    "no-unnecessary-callback-wrapper": true,
    "no-reference-import": true,
    "no-boolean-literal-compare": true,
    "newline-per-chained-call": true,
    "interface-over-type-literal": true,
    "file-name-casing": [true, "kebab-case"],
    "encoding": true,
    "class-name": true,
    "arrow-return-shorthand": [true, "multiline"],
    "array-type": [true, "array"],
    "prefer-const": true,
    "no-require-imports": true,
    "no-default-export": true,
    "max-file-line-count": [true, 300],
    "max-classes-per-file": [true, 1],
    "cyclomatic-complexity": true,
    "use-isnan": true,
    "triple-equals": true,
    "radix": true,
    "prefer-object-spread": true,
    "no-var-keyword": true,
    "prefer-conditional-expression": [true, "check-else-if"],
    "no-unsafe-finally": true,
    "no-this-assignment": true,
    "no-string-literal": true,
    "no-sparse-arrays": true,
    "no-shadowed-variable": true,
    "no-return-await": true,
    "no-object-literal-type-assertion": true,
    "no-null-keyword": true,
    "no-misused-new": true,
    "no-invalid-this": [true, "check-function-in-method"],
    "no-invalid-template-strings": true,
    "no-empty": true,
    "no-duplicate-variable": [true, "check-parameters"],
    "no-duplicate-super": true,
    "no-console": [true, "log", "error"],
    "no-conditional-assignment": true,
    "no-arg": true,
    "label-position": true,
    "forin": true,
    "curly": true,
    "ban-comma-operator": true,
    "only-arrow-functions": true,
    "no-magic-numbers": true,
    "no-any": true,
    "no-empty-interface": true,
    "no-import-side-effect": true,
    "member-ordering": [true, {"order": "fields-first"}],
    "adjacent-overload-signatures": true,
    "member-access": true
  }
}